# Copy this file to terraform.tfvars and customize for your environment

# Path to kubeconfig file
kubeconfig_path = "~/.kube/config"

# Domain for local development
domain = "localhost"

# Enable SSL/TLS (requires cert-manager)
enable_ssl = false

# Resource limits for development
resource_limits = {
  cpu_limit    = "500m"
  memory_limit = "512Mi"
}

# ArgoCD admin password (leave empty to use generated)
argocd_admin_password = "stackai-dev-argocd-password"

# Azure Container Registry credentials
# Get these from: az acr credential show --name stackai --query "username" -o tsv
acr_username = "your-acr-username"
acr_password = "your-acr-password"
